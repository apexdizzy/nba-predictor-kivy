:kivy 2.1.0

<MainLabel@Label>:
    font_size: '18sp'
    bold: True
    color: 0.0, 0.73, 0.82, 1

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 12
        spacing: 8
        canvas.before:
            Color:
                rgba: 0.06, 0.06, 0.06, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint_y: None
            height: '48dp'
            spacing: 8
            Button:
                text: '‚ò∞ Menu'
                on_release: root.manager.current = 'teams'
            Button:
                text: 'üèÜ Teams'
                on_release: root.manager.current = 'teams'
            Button:
                text: 'üîÆ Predict'
                on_release: root.manager.current = 'predict'
            Button:
                text: 'üìú History'
                on_release: root.manager.current = 'history'

        Label:
            text: 'üèÄ NBA ADVANCED PREDICTOR'
            font_size: '22sp'
            size_hint_y: None
            height: '80dp'

        Label:
            text: 'Load team stats from a PDF, view metrics, and predict matchups.'
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]

        Widget:


<TeamsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 8
        spacing: 8

        BoxLayout:
            size_hint_y: None
            height: '48dp'
            Button:
                text: 'üì• Load / Update from PDF'
                on_release: root.load_pdf()
            Button:
                text: 'üíæ Save Stats'
                on_release: app.root.get_screen('teams').refresh_team_list()
            Button:
                text: 'üè† Home'
                on_release: root.manager.current = 'home'

        ScrollView:
            GridLayout:
                id: team_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '44dp'
                row_force_default: True


<PredictionScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 8
        spacing: 8

        BoxLayout:
            size_hint_y: None
            height: '44dp'
            Button:
                text: root.t1
                on_release: root.open_team_picker('t1')
            Button:
                text: root.t2
                on_release: root.open_team_picker('t2')

        Button:
            text: 'üîÆ Predict Match'
            size_hint_y: None
            height: '48dp'
            on_release: root.predict()

        Button:
            text: 'üè† Home'
            size_hint_y: None
            height: '44dp'
            on_release: root.manager.current = 'home'


<ResultScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 8
        Label:
            id: result_label
            text: ''
            text_size: self.width, None
            halign: 'center'
            valign: 'middle'

        BoxLayout:
            size_hint_y: None
            height: '48dp'
            Button:
                text: 'üîÅ New Prediction'
                on_release: root.manager.current = 'predict'
            Button:
                text: 'üè† Back to Home'
                on_release: root.manager.current = 'home'


<HistoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 8
        ScrollView:
            GridLayout:
                id: history_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '120dp'
                row_force_default: False
